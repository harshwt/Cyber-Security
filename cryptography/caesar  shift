#caesar_shift cipher algorithm
def caesar_shift(text, shift):
    result = ""
    for char in text:
        if char.isalpha():
            base = ord('A') if char.isupper() else ord('a')
            shifted = (ord(char )- base + shift) %  26 + base
            result += chr(shifted)
        else:
            result += char
    return result
        
print(caesar_shift("ABCD", 2))


